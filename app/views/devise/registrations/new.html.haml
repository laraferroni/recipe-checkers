%p
.row
  .small-11.large-5.small-centered.large-centered.column.whitewash

    %p
    %h2.fine.blue.center.lower
      -if session[:temp_user_prefs].present?
        Save Your Profile
      -else
        Join the Recipe Checkers

    %p


    .panel.center

      .row
        .columns.small-11.small-centered
          .row
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

              .field
                = f.email_field :email, autofocus: true
              .field
                = f.password_field :password, autocomplete: "off"
              .field
                = f.password_field :password_confirmation, autocomplete: "off"
              .actions
                = f.submit "Sign up", :class=>"button upper", :style=>"width: 100%;"
          = render "devise/shared/links"
          %p
.div{:style=>"position: fixed; top: -5px; height: 100%; min-width: 100%; z-index: -1;"}
  %img{:src => image_path("whitechile1.jpg"), :alt => "", :style=>'min-height: 100%; min-width: 100%;'}

